<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.soham.gofillwater.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/top_text"
        android:text="It's"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_text"
        android:textSize="64sp"
        android:text="Aneesh"
        android:id="@+id/whose_turn"
        android:layout_centerHorizontal="true"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_below="@id/whose_turn">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aneesh_password"
            android:inputType="textPassword"
            android:hint="@string/aneesh_password"/>

    </android.support.design.widget.TextInputLayout>


     <android.support.design.widget.TextInputLayout
         android:id="@+id/text_input_layout2"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_below="@id/text_input_layout1"
         android:layout_margin="16dp">

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/soham_password"
             android:inputType="textPassword"
             android:hint="@string/soham_password"/>

     </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_button"
        android:layout_below="@id/text_input_layout2"
        android:text="Flip!"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
