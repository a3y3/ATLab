<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.soham.allaboardtheendsemtrain.WelcomeActivity"
    tools:showIn="@layout/activity_welcome">


    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toEndOf="@id/nameTextView"
        android:layout_alignBaseline="@id/nameTextView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:text="Number"
        android:inputType="number"
        android:layout_alignStart="@id/nameTextView"
        android:layout_marginTop="16dp"
        android:id="@+id/numberTextView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberEditText"
        android:layout_alignStart="@id/nameEditText"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@id/numberTextView"
        android:layout_below="@id/nameEditText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:layout_centerHorizontal="true"
        android:id="@+id/insertButton"
        android:layout_margin="24dp"
        android:layout_below="@id/numberEditText"/>


</RelativeLayout>
